    <head>
        <meta charset="utf-8">

        <title>{{ repository.full_name }} - gitscore</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <meta name="description" content="Your app description" />
        <link rel="stylesheet" href="/assets/dev/css/app.css" />
    </head>
    <body>
        <h1 style="text-align:center">{{ repository.full_name }}</h1>

        <ul>
            {% for user in users %}
                <li>
                    user: {{ user.login }}
                    <br />
                    score: {{ user.score }}
                    <br />
                    pulls: {{ user.pulls }}
                    <br />
                    bounces: {{ user.bounces }}
                    <br />
                    reviews: {{ user.reviews }}
                </li>
            {% endfor %}
        </ul>
    </body>
